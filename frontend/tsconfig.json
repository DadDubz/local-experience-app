{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@components/*": ["components/*"],
      "@screens/*": ["screens/*"],
      "@context/*": ["context/*"]
    },
    "jsx": "react",
    "module": "ESNext",
    "strict": true,
    "forceConsistentCasingInFileNames": true
  }
}
