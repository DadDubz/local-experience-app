{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@components/*": ["components/*"],
      "@screens/*": ["screens/*"],
      "@context/*": ["context/*"]
    },
    "jsx": "react",
    "module": "ESNext",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["src", "types", "../declarations.d.ts"]
}
